@using ReditBeforeGlowUp.Services
@namespace Login
@inject NavigationManager navMgr
@inject IAuthService authService

<AuthorizeView>
    <Authorized>
        <button class="loginbtn" @onclick="Logout">
           <SfIcon IconCss="loginbtn"></SfIcon>
        </button>
    </Authorized>
    <NotAuthorized>

        <button class="loginbtn" @onclick="Login">
           <SfIcon IconCss="loginbtn"></SfIcon>
        </button>
    </NotAuthorized>
</AuthorizeView>
@code {
    private void Login()
    {
        navMgr.NavigateTo("/Login");
    }

    private async Task Logout()
    {
        await authService.LogoutAsync();
        navMgr.NavigateTo("/");
    }
}